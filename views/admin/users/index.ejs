<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Admin</title>
    <link rel="stylesheet" href="/static/css/bootstrap.min.css" />
    <script src="/static/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>
    <script src="/static/js/vendor/bootstrap.min.js"></script>
    <script src="/static/js/vendor/jquery-library.js"></script>
</head>

<body>
    <div>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <h2>Trang quản trị: <b>ADMIN</b></h2>
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Book Library</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="/admin">Home</a></li>
                    <li><a href="/admin">Đơn hàng cần duyệt</a></li>
                    <li><a href="/admin/sach">Sách</a></li>
                    <li class="active"><a href="/admin/users">Người dùng</a></li>
                    <li><a href="/admin/bills">Hoá đơn</a></li>
                </ul>
            </div>
        </nav>
        <section class="container-fluid">
            <div>
                <div id="user">
                    <div>
                        <div>
                            <a href="admin/user/new" class="btn btn-success" style="margin-bottom: 1vw">Thêm người dùng</a>
                        </div>

                        <!-- tab user trong layout -->
                        <!-- <div class="col-lg-12"> -->
                        <div class="panel panel-default">
                            <div class="panel-heading">Bảng chi tiết người dùng</div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Mã TK</th>
                                                <th>Họ tên</th>
                                                <th>Địa chỉ</th>
                                                <th>Số điện thoại</th>
                                                <th>Ngày sinh</th>
                                                <th>Giới tính</th>
                                                <th>Email</th>
                                                <th>Hành động</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(data && data.users) {%>
                                            <%for(var i=0; i <
                      data.users.length; i++){%>
                                            <tr>
                                                <td>
                                                    <%= data.users[i].ma_tai_khoan%>
                                                </td>
                                                <td>
                                                    <%= data.users[i].ho_ten%>
                                                </td>
                                                <td>
                                                    <%= data.users[i].dia_chi%>
                                                </td>
                                                <td>
                                                    <%= data.users[i].sdt%>
                                                </td>
                                                <td>
                                                    <%= data.users[i].ngay_sinh%>
                                                </td>
                                                <td>
                                                    <%= data.users[i].gioi_tinh%>
                                                </td>
                                                <td>
                                                    <%= data.users[i].email%>
                                                </td>
                                                <td>
                                                    <a name="buttonEdit" id="buttonEdit" class="btn btn-primary" href="/admin/user/edit/<%= data.users[i].ma_tai_khoan%>"
                                                        role="button">Edit</a>
                                                    <a name="buttonDelete" id="buttonDelete" class="btn btn-danger"
                                                        href="#" role="button">Delete</a>
                                                </td>
                                            </tr>
                                            <%}%>
                                            <%}%>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>

                        <!-- /.panel -->
                        <!-- </div> -->
                    </div>
                </div>
        </section>
    </div>
</body>

</html>